<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayoutForTeacher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".TeacherLogin">
    <LinearLayout
        android:id="@+id/TeacherLoginContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/teacherLoginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#3F51B5"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/aclonica"
            android:text="Teacher Login"
            android:textSize="34dp"
            android:textStyle="bold" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout7"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            android:layout_below="@id/teacherLoginTitle"
            android:layout_centerHorizontal="true"
            android:hint="Password"
            android:gravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTeacherSecretPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnTeacherSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInputLayout7"
            android:layout_margin="10dp"
            android:gravity="center"
            app:cornerRadius="16dp"
            android:text="Login"
            app:elevation="6dp"
            android:textStyle="bold"
            android:backgroundTint="#009688"
            android:textColorLink="#2196F3"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>
